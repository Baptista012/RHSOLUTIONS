@{
}
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-2 bg-dark min-vh-100">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline ">Bem vindo funcionario</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>
                        <li>
                            <a data-bs-toggle="collapse" asp-controller="Ponto" asp-action="Index" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-clock"></i> <span class="ms-1 d-none d-sm-inline">Ponto eletrônico</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Folha" asp-action="Index" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Folhas de pagamento</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-fill"></i>
                            <span class="d-none d-sm-inline mx-1">Usuário</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row border Regular shadow" style="margin-top:20px; margin-bottom:20px">
                    <a>
                        <i class="fs-4 bi-table" style="font-size:30px; margin-right: 20px; margin-left:10px"></i><span style="font-size:30px">Folha de pagamento</span>
                    </a>
                </div>
                <button class="btn btn-primary" type="submit">Gerar folha</button>

                @if (Model != null && Model.Any<PontoModel>())
                {
                    foreach (PontoModel ponto in Model)
                    {
                        <div class="container">
                            <div class="row border" style="margin-bottom:30px">
                                <div class="row col-md-12 d-flex justify-content-between">
                                    <div class="col-md-6">
                                        Dia: 24/09/2023
                                    </div>
                                    <div class="col-md-6 ">
                                        Total horas: @ponto.HorasTrabalhadas
                                    </div>
                                    <div class="col border-top border-bottom">
                                        Entrada: @ponto.PrimeiraBatida
                                    </div>
                                    <div class="col border-top border-bottom">
                                        Saida: @ponto.SegundaBatida
                                    </div>
                                    <div class="col border-top border-bottom">
                                        Entrada: @ponto.TerceiraBatida
                                    </div>
                                    <div class="col border-top border-bottom">
                                        Saida: @ponto.QuartaBatida
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            </div>
        </div>
</body>